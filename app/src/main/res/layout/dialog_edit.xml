<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <TextView
            android:id="@+id/tv_des_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="운동 명"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/blackhansans"/>

        <EditText
            android:id="@+id/ed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="@+id/tv_des_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_des_title"
            android:fontFamily="@font/blackhansans"/>

        <TextView
            android:id="@+id/te_des_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="타이머"
            app:layout_constraintStart_toStartOf="@+id/ed_title"
            app:layout_constraintTop_toBottomOf="@+id/ed_title"
            android:fontFamily="@font/blackhansans"/>

        <EditText
            android:id="@+id/ed_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="@+id/te_des_timer"
            app:layout_constraintTop_toBottomOf="@+id/te_des_timer"
            android:fontFamily="@font/blackhansans"/>

        <TextView
            android:id="@+id/te_des_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="루틴 번호"
            app:layout_constraintStart_toStartOf="@+id/ed_timer"
            app:layout_constraintTop_toBottomOf="@+id/ed_timer"
            android:fontFamily="@font/blackhansans"/>

        <TextView
            android:id="@+id/te_des_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="@+id/te_des_content2"
            app:layout_constraintTop_toBottomOf="@+id/te_des_content2"
            android:fontFamily="@font/blackhansans"/>

        <Button
            android:id="@+id/okbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="확인"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/blackhansans"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>